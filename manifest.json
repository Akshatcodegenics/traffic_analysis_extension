{
    "manifest_version": 3,
    "name": "Traffic Analyzer Pro",
    "version": "1.0.0",
    "description": "Advanced traffic analysis with real-time heatmaps, smart route suggestions, and AI-powered insights",
    "author": "Traffic Analyzer Team",
    
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },

    "action": {
        "default_popup": "popup.html",
        "default_title": "Traffic Analyzer Pro",
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png"
        }
    },

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["content.css"],
            "run_at": "document_end"
        }
    ],

    "permissions": [
        "geolocation",
        "notifications",
        "storage",
        "activeTab",
        "background"
    ],

    "host_permissions": [
        "https://maps.googleapis.com/*",
        "https://api.mapbox.com/*",
        "https://*.traffic-api.com/*"
    ],

    "web_accessible_resources": [
        {
            "resources": [
                "icons/*",
                "assets/*",
                "styles.css"
            ],
            "matches": ["<all_urls>"]
        }
    ],

    "commands": {
        "open_dashboard": {
            "suggested_key": {
                "default": "Ctrl+Shift+T",
                "mac": "Command+Shift+T"
            },
            "description": "Open Traffic Analyzer dashboard"
        },
        "refresh_data": {
            "suggested_key": {
                "default": "Ctrl+R",
                "mac": "Command+R"
            },
            "description": "Refresh traffic data"
        }
    },

    "options_page": "options.html",
    
    "minimum_chrome_version": "88",
    
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com;"
    }
}
